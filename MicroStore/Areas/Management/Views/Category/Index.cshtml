@model IEnumerable<MicroStore.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"><a asp-action="Index" asp-controller="Category">Categories</a></li>
            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Categories</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Index">Categories</a></li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <a asp-action="Create" class="primary-btn pull-right"><i class="fa fa-plus-circle"></i> Create a New Category</a>

            <div class="clearfix"></div> <br />
            @if (Model.Count() > 0)
            {
                <table style="margin: 0" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(m => m.Id)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.ParentId)</th>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th class="text-center">@Html.DisplayNameFor(m => m.DisplayOrder)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center" style="vertical-align: middle">@Html.DisplayFor(m => item.Id)</td>
                                <td class="text-center" style="vertical-align: middle">@Html.DisplayFor(m => item.Parent.Name)</td>
                                <td style="vertical-align: middle">@Html.DisplayFor(m => item.Name)</td>
                                <td class="text-center" style="vertical-align: middle">@Html.DisplayFor(m => item.DisplayOrder)</td>
                                <td class="text-center"><partial name="_TableButtonsPartial" model="item.Id" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div style="margin: 0" class="alert alert-info" role="alert">
                    There is no any value to show here.
                </div>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
